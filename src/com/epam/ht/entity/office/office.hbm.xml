<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.ht.entity.office">
	<class name="Office" table="Office">
		<id name="officeId" column="OFFICE_ID" type="long">
			<generator class="increment" />
		</id>
		<set name="employees" table="OFFICE_EMPLOYEE" lazy="true">
			<key column="OFFICE_ID" />
			<many-to-many class="com.epam.ht.entity.employee.Employee"
				column="EMPLOYEE_ID" />
		</set>
		<many-to-one name="address" class="com.epam.ht.entity.address.Address"
			column="ADDRESS_ID" />
		<many-to-one name="company" class="com.epam.ht.entity.company.Company"
			column="COMPANY_ID" />
	</class>
</hibernate-mapping>