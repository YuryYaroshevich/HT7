<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.ht.entity.address">
	<class name="com.epam.ht.entity.address.Address" table="Adress">
		<id name="addressId" column="ADDRESS_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="address" column="ADDRESS" type="string" />
		<many-to-one name="city" class="com.epam.ht.entity.city.City"
			column="CITY_ID" />
	</class>
</hibernate-mapping>        