<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.ht.entity">
	<class name="Country" table="Country">
		<id name="countryId" column="COUNTRY_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="name" column="COUNTRY_NAME" type="string" />
	</class>

	<class name="City" table="City">
		<id name="cityId" column="CITY_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="name" column="CITY_NAME" />
		<many-to-one name="country" class="Country" column="COUNTRY_ID" />
	</class>

	<class name="Address" table="Adress">
		<id name="addressId" column="ADDRESS_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="address" column="ADDRESS" type="string" />
		<many-to-one name="city" class="City" column="CITY_ID" />
		<one-to-one name="employee" property-ref="address" />
	</class>

	<class name="Employee" table="Employee">
		<id name="employeeId" column="EMPLOYEE_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="firstName" column="FIRST_NAME" type="string" />
		<property name="lastName" column="LAST_NAME" type="string" />
		<many-to-one name="address" class="Address" column="ADDRESS_ID" />
		<list name="offices" table="OFFICE_EMPLOYEE">
			<key column="EMPLOYEE_ID" />
			<list-index column="OFFICE_ID" />
			<many-to-many class="Office" column="OFFICE_ID" />
		</list>
	</class>
</hibernate-mapping>