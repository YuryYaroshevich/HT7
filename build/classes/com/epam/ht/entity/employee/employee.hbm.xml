<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.ht.entity.employee">
	<class name="Employee" table="Employee" lazy="false">
		<id name="id" column="EMPLOYEE_ID" type="long">
			<generator class="increment" />
		</id>
		<property name="firstName" column="FIRST_NAME" not-null="true" />
		<property name="lastName" column="LAST_NAME" not-null="true" />
		<many-to-one name="address" column="EMPLOYEE_ID" unique="true"
			not-null="true" class="com.epam.ht.entity.address.Address" insert="false"
			update="false" />
		<map name="offices" table="OFFICE_EMPLOYEE" lazy="false">
			<key column="EMPLOYEE_ID" />
			<map-key-many-to-many column="office_id"
				formula="(select oe.office_id from yra.office_employee oe where oe.employee_id = employee_id)"
				class="com.epam.ht.entity.office.Office" />
			<element type="string" column="position" not-null="true" />
			<!-- <many-to-many class="com.epam.ht.entity.office.Office" column="OFFICE_ID" 
				/> -->
		</map>
	</class>

	<query name="employeeList">
		<![CDATA[from Employee]]>
	</query>
	<!-- <query name="employeePosition"> <![CDATA[select position from Employee 
		e inner join Office_Employee oe on e.employee_id = oe.employee_id where e.employee_id 
		= :employee_id]]> </query> -->
</hibernate-mapping>